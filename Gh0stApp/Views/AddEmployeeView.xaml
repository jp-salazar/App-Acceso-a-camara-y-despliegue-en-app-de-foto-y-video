<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Agregar/Actualizar Empleado"
             x:Class="Gh0stApp.Views.AddEmployeeView">
    <ContentPage.Content>
        <StackLayout Margin="10" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
            <Entry x:Name="txtName" Placeholder="Nombre" />
            <Entry x:Name="txtEmail" Placeholder="Email" />
            <Entry x:Name="txtAddress" Placeholder="Direccion" />
            <Button x:Name="btnSaveUpdate" Text="Guardar" Clicked="btnSaveUpdate_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>